<%-
  # Get Partitions
  cmd = "sinfo -ho %R"
  begin
    output, status = Open3.capture2e(cmd)
    if status.success?
      partitions = output.split("\n").map(&:strip).reject(&:blank?).sort
    else
      raise output
    end
  rescue => e
    partitions = []
    error = e.message.strip
  end
-%>

---
cluster: "peregrine"

form:
  - version
  - custom_queue
  - wall_time
  - bc_num_slots
  - num_cores
  - node_type
  - bc_vnc_resolution
  - memory
#   - bc_email_on_started

attributes:
  wall_time:
    label: Wall Time
    help: "Please give the wall time in the SLURM format, D:HH:MM:SS"
    widget: "text_field"
  
  custom_queue:
    label: Partition
    help: Please select a partition from the drop-down menu.
    <%- if partitions.blank? -%>
    widget: text_field
    <%- else -%>
    widget: select
    options:
    <%- partitions.each do |q| -%>
      - [ "<%= q %>", "<%= q %>" ]
    <%- end -%>
    <%- end -%>
  
  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 1
    help: |
      Number of cores on node type (2 GB per core unless requesting whole
      node). Leave blank if requesting full node.
    min: 0
    max: 24
    step: 1
    id: 'num_cores'
  bc_num_slots: "1"
  node_type: ""
  bc_vnc_resolution:
    required: true
  bc_account:
    label: "Project"
    help: "You can leave this blank if **not** in multiple projects."
#   node_type:
#     widget: select
#     label: "Node type"
#     help: |
#       - **GPU** - (*1-24 cores*).
#       - **himem** - (*48 cores*)
#     options:
#       - [ "GPU",     "gpu"            ]
#       - [ "himem", "himem"    ]
  version:
    label: "MATLAB version"
    help: "This defines the version of MATLAB you want to load."
    widget: select
    options:
      - [ "2020b", "MATLAB/2020b GLib/2.69.1-GCCcore-11.2.0" ]
      - [ "2019b", "MATLAB/2019b" ]
      - [ "2018a", "MATLAB/2018a" ]

  memory:
    label: Memory
    help: Amount of memory per CPU requested, in GB
    widget: 'number_field'
    value: 2
    min: 1
    max: 128
    step: 1
